<UserControl x:Class="AppxManager.controls.Appx"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AppxManager.controls"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="700">
    <UserControl.Resources>
    </UserControl.Resources>
    <Grid Background="{DynamicResource {x:Static SystemColors.ActiveCaptionBrushKey}}" DataContext="this">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="143*"/>
            <ColumnDefinition Width="7*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Background="Teal" Margin="0,0,112,0">
            <Label Content="{Binding appxID, ElementName=appx}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </StackPanel>
        <StackPanel Margin="555,0,0,0" RenderTransformOrigin="0.5,0.5" Background="#FF33F3F3" Grid.ColumnSpan="2">
            <Button Content="Uninstall" IsEnabled="{Binding isInstalled, ElementName=appx}" Click="uninstall_appx"/>
            <Button Content="Install" IsEnabled="{Binding isInstalled, ElementName=appx}" Click="install_appx"/>
        </StackPanel>
    </Grid>
</UserControl>
